#!/bin/bash
INPUT=$(cat)
TOOL=$(echo "$INPUT" | jq -r '.preToolUse.tool')
# done 스킬 사용 전 반드시 테스트 증거(evidence) 확인 강제
if [[ "$TOOL" == "use_skill" ]] && [[ "$(echo "$INPUT" | jq -r '.preToolUse.parameters.name')" == "rhadamanthus-judge" ]]; then
  echo "[PreToolUse] 검증 단계 진입. 테스트 환경을 점검합니다." >&2
fi
echo "{\"cancel\":false}"